<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.8.0.xsd">
    <jdbc>
        <driver>org.postgresql.Driver</driver>
        <!-- Url, username and password will be filled from application.properties in jooq.gradle script. -->
        <url/>
        <user/>
        <password/>
    </jdbc>

    <generator>
        <name>org.jooq.util.JavaGenerator</name>

        <database>
            <name>org.jooq.util.postgres.PostgresDatabase</name>
            <inputSchema>public</inputSchema>
            <includes>.*</includes>
            <excludes/>

            <customTypes>
                <customType>
                    <name>LocalDateTime</name>
                    <type>java.time.LocalDateTime</type>
                    <converter>cz.quantumleap.core.persistence.converter.LocalDateTimeConverter</converter>
                </customType>
                <customType>
                    <name>Json</name>
                    <type>com.fasterxml.jackson.databind.JsonNode</type>
                    <binding>cz.quantumleap.core.persistence.binding.JsonBinding</binding>
                </customType>
            </customTypes>
            <forcedTypes>
                <forcedType>
                    <name>LocalDateTime</name>
                    <types>TIMESTAMP.*</types>
                </forcedType>
                <forcedType>
                    <name>Json</name>
                    <types>JSON</types>
                </forcedType>
            </forcedTypes>
        </database>

        <target>
            <!-- TODO This is going to be also replaced by code generator! -->
            <packageName>cz.quantumleap</packageName>
            <directory>src/generated/java</directory>
            <encoding>UTF-8</encoding>
        </target>
    </generator>
</configuration>