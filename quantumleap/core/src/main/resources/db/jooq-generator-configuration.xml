<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.9.0.xsd">
    <jdbc>
        <driver>org.postgresql.Driver</driver>
        <!-- Url, username and password will be filled from application.properties in jooq.gradle script. -->
        <url/>
        <user/>
        <password/>
    </jdbc>

    <generator>
        <name>org.jooq.util.JavaGenerator</name>

        <database>
            <name>org.jooq.util.postgres.PostgresDatabase</name>
            <inputSchema>public</inputSchema>
            <includes>.*</includes>
            <excludes/>

            <customTypes>
                <customType>
                    <name>Json</name>
                    <type>com.fasterxml.jackson.databind.JsonNode</type>
                    <binding>cz.quantumleap.core.persistence.binding.JsonBinding</binding>
                </customType>
            </customTypes>
            <forcedTypes>
                <forcedType>
                    <name>Json</name>
                    <types>JSON</types>
                </forcedType>
            </forcedTypes>
        </database>

        <generate>
            <!-- TODO Don't forget to remove pojos and daos... -->
            <pojos>false</pojos>
            <daos>false</daos>
            <records>false</records>
            <javaTimeTypes>true</javaTimeTypes>
        </generate>

        <strategy>
            <matchers>
                <tables>
                    <table>
                        <tableClass>
                            <transform>PASCAL</transform>
                            <expression>$0_table</expression>
                        </tableClass>
                    </table>
                </tables>
            </matchers>
        </strategy>

        <target>
            <!-- TODO Also this is going to be replaced by code generator! -->
            <packageName>cz.quantumleap</packageName>
            <directory>src/generated/java</directory>
            <encoding>UTF-8</encoding>
        </target>
    </generator>
</configuration>